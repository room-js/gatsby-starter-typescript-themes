{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.css",
    "./**/*.scss",
    "./@types"
  ],
  "exclude": [
    "/node_modules/"
  ]
}
